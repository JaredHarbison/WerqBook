<% @user ||= current_user %>
<section class="user_info">
  <%= link_to gravatar_for(@user, size:80), @user %>
  <h1><%= link_to @user.username, @user, :title => "visit profile for #{@user.username}" %></h1>
  <h2><%= full_name(@user) %></h2>
  <h2><%= mail_to @user.email, @user.email, :title => "send an email to #{@user.email}" %></h2>
  <%= render 'shared/stats' %>
</section>
