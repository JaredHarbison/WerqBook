<% provide(:title, full_name(@user)) %>
<div class="row">
  <aside class="col-md-4">
    <section class="row">
      <%= render 'shared/user_info' %>
    </section>
  </aside>


  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3><%= @user.microposts.count %> microposts</h3>
      <ol class="microposts"
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>


</div>
