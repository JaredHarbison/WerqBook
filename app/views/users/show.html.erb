  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <%= full_name(@user) %><br>
      <%= @user.email %><br>
      <%= @user.username %><br>
      admin? <%= @user.admin %><br>
      queen? <%= @user.queen %><br>
    </section>
  </aside>
</div>
